<div class="w3-container">
  <div class="list-of-users">
    <h1>List of users</h1>
    <hr>
    <% @users.each do |user| %>
      <div class="col-md-6">
        <%= user.email %>
      </div>
      <% if user.is_admin? %>
        <div class="col-md-4">
          <b>Admin <%= link_to "Demote", user, method: :patch %></b>
        </div>
      <% else %>
        <div class="col-md-4">
          <b>Student <%= link_to "Promote", user, method: :patch %></b>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-12">
  <hr>
    <%= link_to "Generate Pairs for Today", pairs_path %>
    <hr>
    <div class="form">
      <p><b> Generate Pairs for a specific day</b></p>
      <%= render 'shared/form' %>
    </div>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
  </div>
</div>
