<a href=# style="color: #000000; text-decoration: none;">CodiMatch</a>
<div class="w3-container">
    <hr>
    <div class="ting" style="text-align: center;"><h1>List of users</h1></div>
        <% @users.each do |user| %>
  <div class="col-md-6">
  <%= user.email %>
  </div>

  <% if user.is_admin? %>
  <div class="col-md-4"><b>Admin <%= link_to "Demote", user, method: :patch%></b></div>
  <% else %>
  <div class="col-md-4"><b>Student <%= link_to "Promote", user, method: :patch%></b></div>
  <% end %>
  <% end %>
  <div class="GeneratePairs">
  <%= link_to "Generate Pairs for #{@users.students.count - 1} Days", pairs_path %>
  <hr>
  <div class="DailyGen">
  <p> Generate Pairs for a specific day</p>
</br>
</br>
  <label for=“date-input”>Date: </label>
  <input type=“DateTime” id=“date-input”>
  <button class="SubmitThing"><%=link_to "Submit", pairs_path, method: :post %></button>
  <hr>
</div>
</div>

</div>
</div>
